{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["api/**", "frontend/src/**", "frontend/data/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}


